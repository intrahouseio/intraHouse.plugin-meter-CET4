{
  "name": "meterset",
  "description": "Energy meter CET (RS-485) via TCP",
  "module": "metercet.js",
  "single": 0,

  "params": [
    {
      "name": "host",
      "note": "IP",
      "type": "string",
      "val": "192.168.0.221"
    },
    {
      "name": "port",
      "note": "Порт",
      "type": "number",
      "val": "4001"
    },

    {
      "name": "password",
      "note": "Пароль счетчика",
      "type": "string",
      "val": "000000"
    },
    
    {
        "name": "ntariffs",
        "note": "Число тарифов",
        "type": "number",
        "val": "8"
    },

    {
      "name": "metering",
      "tabnote": "Снятие показаний",
      "note": "Измерение",
      "type": "multi",
      "data": {
        "scheme": {
          "mid": {
            "name": "Показание",
            "type": "droplist",
            "order": 1,
            "data": [
              { "id": "P", "name": "P Активная мощность, Вт" },
              { "id": "Q", "name": "Q Реaктивная мощность, Вар" },
              { "id": "S", "name": "S Полная мощность, ВА" },
              { "id": "I", "name": "I Ток, А" },
              { "id": "U", "name": "U Напряжение фазное, Вт" },
              { "id": "E", "name": "E Энергия, кВт/ч" },
              { "id": "f", "name": "f Частота сети, Гц" },
              { "id": "T", "name": "T Температура, C" },
              { "id": "cos", "name": "cos Коэффициент активной мощности" },
              {
                "id": "Кuf",
                "name": "Киф Коэффициент искажения фазного напряжения, %"
              }
            ]
          },
          "period": {
            "name": "Интервал опроса (сек), 0 - постоянно",
            "type": "NUMBER",
            "order": 2
          }
        },
        "default": {
          "mid": "P",
          "period": 0
        }
      },
      "val": [
          { "mid": "P", "period": 0 },
          { "mid": "Q", "period": 0 },
          { "mid": "S", "period": 0 },
          { "mid": "I", "period": 0 },
          { "mid": "U", "period": 0 },
          { "mid": "E", "period": 1 },
          { "mid": "f", "period": 10 },
          { "mid": "T", "period": 60 },
          { "mid": "cos", "period": 10 },
          { "mid": "Kuf", "period": 10 }
    ]
    }
  ],

  "chpattern": [
    {
      "name": "note",
      "note": "Описание канала",
      "type": "STRING",
      "hardlevel": 1
    }
  ],

  "genrules": {
    "SensorA": {
      "type": "200",
